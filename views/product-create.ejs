<%- include('./head.ejs')  %>
<%- include('./scanBarCode.ejs')  %> 
<%- include('./menu.ejs')  %> 
<main>
  <h1><%= title %></h1>
  <div class="container  container-form" >
    <form action="/products/create-product" method="POST" class="product-form" id="create-product-form">
      <label for="name"> Nombre del producto: 
        <input type="text" name="name" placeholder="Electródo para madera" required>
      </label>
      <label for="description">Descripción: 
        <input type="text" name="description" placeholder="Electródo para soldar madera" required>
      </label>
      <label for="code"> Código Interno : 
        <input type="text" pattern="^([A-Z]{2})+([0-9]{6})$" title="El codigo debe iniciar con 2 letras mayúsculas y finalizar con 6 números" placeholder="CR001001" name="code" required>
      </label>
      <label for="type">
        Seleccione el tipo de producto:
        <select name="type">
          <option value="ferreteria">Ferretería</option>
          <option value="pintureria">Pinturería</option>
          <option value="carpintería">Carpintería</option>
        </select>
      </label>
      <label for="minStock">Stock Mínimo: 
        <input type="number" name="minStock" title="Debe ingresar el Stock minimo con Numeros enteros" pattern="^[0-9]{1,20}$" placeholder="50" required>
      </label>
      <label for="barCode">Escanear Código De Barra: <input type="text" name="barCodeScan" placeholder="347 1 06548725" disabled required></label>
      <label for="barCodeDos">Repita el Código De Barra: <input type="text" name="barCode" placeholder="347 1 06548725" required></label>      
      <button type="button" class="btn-code-scan">Escanear Código <img id="camera-icon" src="/assets/camera-icon.svg" alt="Saca una foto"></button>
      <input type="submit" id="btnSubmitForm" value="Enviar">
    </form>
  </div>
  <template id="show-template">
    <article class="problem">
      <h3></h3>
      <p></p>
      <input type="button">
    </article>
  </template>
</main>
<script src="https://unpkg.com/html5-qrcode"></script>
